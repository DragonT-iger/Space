<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.space.user.mapper.UserMapper">
	<insert id="insertUser" parameterType="MemberInfo">
		insert into mem_info(MNAME,NICKNAME,USERID,MPWD,HP,BIRTH,STATUS,POINT,MRANK,ACCOUNT,ADDPOINT)
		values(#{mname},#{nickname},#{userid},#{mpwd},#{hp},#{birth},#{status},0,1,#{account},0)
	</insert>
	<select id="getUser" resultType="MemberInfo" parameterType="string">
		select * from mem_info_view where USERID=#{value}
	</select>
	<select id="idCheck" resultType="int" parameterType="string">
		SELECT COUNT(*) FROM MEM_INFO WHERE USERID=#{value}
	</select>
	<select id="listUser" resultType="MemberInfo" parameterType="com.project.space.domain.PagingVO">
		select * from mem_info
	</select>
</mapper>